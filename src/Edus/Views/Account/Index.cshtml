@model IEnumerable<AdminModel>
@{
    //说明，因为管理员涉及的数量很少，就省略了分页和搜索的功能
    ViewBag.Title = "管理员信息管理";
    ViewBag.Location = "/";
}

<div class="IndexBoder">
    @Html.Partial("_PartialAdmin", Model)
    @*新建按钮*@
    <div style="margin-bottom:10px">
        <button type="button" class="btn btn-outline btn-success" id="AddAdmin" data-toggle="modal" data-target="#myModal">
            添加
        </button>
        @*弹出的新建模态对话框*@
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content animated bounceInRight">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span><span class="sr-only">关闭</span>
                        </button>
                        <h4 class="modal-title">添加管理员</h4>
                    </div>

                    <div class="modal-body">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", id="addAdmin" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group"><label>用户名</label> <input type="text" id="AEmail" placeholder="请输入管理员邮箱" class="form-control"></div>
                            <div class="form-group"><label>密码</label> <input type="text" id="APassword" placeholder="请输入管理员密码" class="form-control"></div>
                            <div class="form-group">
                                <label>选择分管模块 (默认课程信息管理)</label>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="AType" value="招生信息管理">招生信息管理
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="AType" value="教务信息管理">教务信息管理
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="AType" value="学生信息管理">学生信息管理
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="AType" value="教师信息管理">教师信息管理
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="AType" checked="checked" value="课程信息管理">课程信息管理
                                    </label>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-dismiss="modal" id="close">关闭</button>
                        <button type="submit" class="btn btn-primary" onclick="AddAdmin(); return false;">保存</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Styles.Render("~/CSS/CouAdminManageStudent")
@Scripts.Render("~/Scripts/CouAdminManageStudent")