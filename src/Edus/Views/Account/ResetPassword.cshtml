@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewBag.Title = "重置密码";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <input id="Code" name="Code" type="hidden" value="@ViewBag.Code" />
    <fieldset>
        <div class="form-group">
            <input class="form-control" id="Email" name="Email" placeholder="邮箱" type="email" value="" />
        </div>
        <div class="form-group">
            <input class="form-control" id="passWord" name="passWord" placeholder="密码" type="password" value="" />
        </div>
        <div class="form-group">
            <input class="form-control" id="rePassword" name="rePassword" placeholder="重复密码" type="password" value="" />
        </div>
        <button id="resetPassword" type="submit" class="btn btn-lg btn-success btn-block" onclick="ResetPassword(); return false;">重置密码</button>
    </fieldset>
}